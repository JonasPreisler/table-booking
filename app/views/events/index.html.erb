<p id="notice"><%= notice %></p>



<!-- Page Header -->
<div class="content">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading animated zoomIn">
                Events
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>Dashboard</li>
                <li><a class="link-effect" href="">Events</a></li>
            </ol>
        </div>
    </div>
  <%= link_to 'New Event', new_event_path, class: "btn btn-xl btn-default button-new" %>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
        <div class="block-content table-responsive">
            <table class="table table-striped js-dataTable-full-pagination">
              <table>
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @events.each do |event| %>
                    <tr>
                      <td><%= event.title %></td>
                      <td><%= event.date %></td>
                      <td><%= link_to 'View', event_path(event.id), :class=>'btn btn-xs btn-default' %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </table>
        </div>
    </div> 
</div>
<!-- END Page Content -->

