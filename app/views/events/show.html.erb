<p id="notice"><%= notice %></p>

<div class="content">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading animated zoomIn">
                <td><%= @event.title %></td>
                <td><%= @event.date %></td>
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li><%= link_to 'Dashboard', root_path %></li>
                <li><a class="link-effect" href="">Events</a></li>
            </ol>
        </div>
    </div>
  <%= link_to 'Edit Event', edit_event_path, class: "btn btn-xl btn-default button-new" %>
  <%= link_to 'New Guestlist', new_guestlist_path, class: "btn btn-xl btn-default button-new-2" %>
  <%= link_to 'New Guest', new_guest_path, class: "btn btn-xl btn-default button-new-3" %>
</div>



<!-- Page Content -->
<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
        <div class="block-content table-responsive">
            <table class="table table-striped js-dataTable-full-pagination">
                
                <% @guestlists.each do |guestlists| %>

                  <p style="font-size:20px">
                    <strong>List:</strong>
                    <%= link_to guestlists.ambassador.name, guestlists if guestlists.ambassador %> 
                    <%= link_to guestlists.id if guestlists %>  (<%= guestlists.guests.count %> guests)
                  </p>
                <% end %>
              <br>
            </table>
        </div>
    </div> 
</div>
<!-- END Page Content -->

