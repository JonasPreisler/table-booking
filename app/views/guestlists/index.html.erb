<p id="notice"><%= notice %></p>
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading animated zoomIn">
                All Guestlists
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>Dashboard</li>
                <li><a class="link-effect" href="">Guestlists</a></li>
            </ol>
        </div>
    </div>
</div>

<!-- Page Content -->
<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
        <div class="block-content table-responsive">
            <table class="table table-striped js-dataTable-full-pagination">
                

              <table>
                <thead>
                  <tr>
                    <th>Ambassador:</th>
                    <th>Event:</th>
                    <th>Date:</th>
                    <th colspan="3"></th>
                </thead>

                <tbody>
                  <% @guestlists.each do |guestlist| %>
                    <tr>
                      <td><%= link_to guestlist.ambassador.name, guestlist_path(guestlist.id) if guestlist.ambassador %> (<%= guestlist.guests.count %>)</td>  
                      <td><%= guestlist.event.title %></td>
                      <td><%= guestlist.event.date %></td>
                      <td><%= link_to 'Edit', edit_guestlist_path(guestlist), :class=>'btn btn-xs btn-default' %></td>
                      <td><%= link_to 'Delete', guestlist, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-xs btn-default' %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

              <%= link_to 'New Guestlist', new_guestlist_path, class: "btn btn-xl btn-default" %>
            </table>
        </div>
    </div> 
</div>
<!-- END Page Content -->

