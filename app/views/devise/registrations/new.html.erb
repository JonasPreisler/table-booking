
<% content_for :title, "Sign Up" %>


<div class="brand">
    <%= image_tag 'logo.png' %>
</div>
<h3 class="font-size-24">Sign Up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<span class="text-danger" style="margin-bottom: 20px"><%= devise_error_messages! %></span>
    <div class="form-group"> 
        <div class="form-material floating">
            <%= f.email_field :email, autofocus: true, :class=>"form-control empty" %>
            <label class="floating-label" for="user_email">Email</label>
        </div>
    </div>
    <div class="form-group"> 
        <div class="form-material floating">                          
            <%= f.password_field :password, autocomplete: "off", :class=>"form-control empty" %>
            <label class="floating-label" for="user_password">Password</label>
            <% if @minimum_password_length %>
            <em class="pull-right">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
        </div>
    </div>
    <div class="form-group"> 
        <div class="form-material floating">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control empty" %>
            <label class="floating-label" for="user_password_confirmation">Password Confirmation</label>
        </div>
    </div>   
    <%= f.submit "Sign up", :class=>"btn btn-primary btn-block" %>
<% end %>

<%= link_to 'Take Me To Log In', new_user_session_path, class: "btn btn-primary btn-block" %>
