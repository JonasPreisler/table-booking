<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
          <div class="block-content table-responsive">
            <%= simple_form_for(guest, html: { class: 'form-horizontal' }) do |f| %>

              <% if guest.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

                  <ul>
                  <% guest.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= f.input :first_name, placeholder: "First Name" %>
              </div>

              <div class="field">
                <%= f.input :last_name, placeholder: "Last Name" %>
              </div>

              <div class="field">
                <%= f.input :gender, placeholder: "Gender" %>
              </div>

              <div class="col-sm-10">
                <label class="control-label">Guestlist:</label>
                <%= f.select :guestlist_id, Guestlist.all.map{ |m| [m.event.title,m.id]}, {}, placeholder: "Select guestlist", class: "form-control" %>
              </div>

              <div class="col-sm-10">
                <label class="control-label">Ambassador:</label>
                <%= f.select :ambassador_id, Ambassador.all.map{ |m| [m.name,m.id]}, {}, placeholder: "Select ambassador", class: "form-control" %>
              </div>

              <div class="col-sm-10">
                <label class="control-label">Girl:</label>
                <%= f.select :name, Girl.all.map{ |m| [m.name]}, {}, placeholder: "Select girl", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.button :submit, class: "button-new" %>
              </div>
            <% end %>
          </div>
        </div>
    </div> 
</div>