<p id="notice"><%= notice %></p>

<div class="content ">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading animated zoomIn">
                All Guests
            </h1>
        </div>
        <div class="col-sm-5 text-right hidden-xs">
            <ol class="breadcrumb push-10-t">
                <li>Dashboard</li>
                <li><a class="link-effect" href="">Guest</a></li>
            </ol>
        </div>
    </div>
</div>
<!-- END Page Header -->

<!-- Page Content -->
<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
        <div class="block-content table-responsive">
            <table class="table table-striped js-dataTable-full-pagination">
                

              <table>
                <thead>
                  <tr>
                    <th>First name</td>
                    <th>Last name</th>
                    <th>Gender</th>
                    <th>Guestlists</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @guests.each do |guest| %>
                    <tr>
                      <td><%= guest.first_name %></td>
                      <td><%= guest.last_name %></td>
                      <td><%= guest.gender %></td>
                      <td><%= link_to guest.guestlist.id, guestlists_path(guest.guestlist.id) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

            </table>
        </div>
    </div> 
</div>
<!-- END Page Content -->

