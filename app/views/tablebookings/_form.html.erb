<%= simple_form_for(@tablebooking) do |f| %>
  <%= f.error_notification %>


              <div class="field">
                <%= f.input :first_name, placeholder: "First Name" %>
              </div>

              <div class="field">
                <%= f.input :last_name, placeholder: "Last Name" %>
              </div>


    <div class="col-sm-10">
      <label class="control-label">Table:</label>
      <%= f.select :table_id, Table.all.map{ |m| [m.id]}, {}, placeholder: "Select Table", class: "form-control" %>
    </div>

    <div class="col-sm-10">
      <label class="control-label">Guestlist:</label>
      <%= f.select :guestlist_id, Guestlist.all.map{ |m| [m.event.title,m.id]}, {}, placeholder: "Select Table", class: "form-control" %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
