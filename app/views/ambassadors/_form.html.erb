<div class="content">
    <!-- Dynamic Table Simple -->
    <div class="block">
        <div class="block-header">
          <div class="block-content table-responsive">
            <%= simple_form_for(ambassador, html: { class: 'form-horizontal' }) do |f| %>
              <% if ambassador.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(ambassador.errors.count, "error") %> prohibited this ambassador from being saved:</h2>

                  <ul>
                  <% ambassador.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= f.input :name, placeholder: 'Name' %>
              </div>

              <div class="actions">
                <%= f.button :submit %>
              </div>
            <% end %>
          </div>
        </div>
    </div> 
</div>
